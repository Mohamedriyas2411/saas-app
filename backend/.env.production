# Production Backend Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Configuration (cloud database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/saas_app?retryWrites=true&w=majority

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=super-secret-production-key-change-this-immediately
JWT_EXPIRES_IN=7d

# Frontend URL (will be your domain)
FRONTEND_URL=https://your-domain.com

# Stripe Configuration (get from Stripe dashboard)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
